# Target: OpenSUSE 10.1

Summary:          @PACKAGE_SUMMARY@
Name:             @PACKAGE_NAME@
Version:          @PACKAGE_VERSION@
Release:          @RPM_RELEASE@%{?dist}
License:          @PACKAGE_LICENSE@
URL:              @PACKAGE_URL@
Group:            @SUSE_10_1_LIB_GROUP@
Source:           @PACKAGE_DOWNLOAD@%{name}-%{version}.tar.bz2
BuildRoot:        %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildRequires:    @SUSE_10_1_BUILD_REQUIRES@

%description
The clipsmm library provides a C++ interface to the CLIPS C library.
%package          devel
Summary:          Headers for developing programs that will use %{name}
Group:            @SUSE_10_1_DEVEL_GROUP@
Requires:         %{name} = %{version}-%{release}
Requires:         @SUSE_10_1_BUILD_REQUIRES@

%description    devel
This package contains the libraries and header files needed for
developing %{name} applications.

%prep
%setup -q

%build
%configure --enable-static=no
%{__make} %{?jobs:-j%{jobs}}

%install
make DESTDIR=%{buildroot} install
find %{buildroot} -type f -name "*.la" -exec rm -f {} ';'
%{__rm} -rf %{buildroot}/usr/bin
mv docs/reference/html .

%clean
%{__rm} -rf %{buildroot}

%post -p /sbin/ldconfig

%postun -p /sbin/ldconfig

%files
%defattr(-,root,root,-)
%{_libdir}/lib*.so.*
%doc AUTHORS COPYING


%files devel
%defattr(-,root,root,-)
%{_libdir}/*.so
%{_libdir}/pkgconfig/*
%{_includedir}/@PACKAGE_NAME@-@PACKAGE_RELEASE@/
%doc ChangeLog html


